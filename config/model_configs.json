{
  "text_model": {
    "name": "google/flan-t5-base",
    "max_length": 512,
    "temperature": 0.7,
    "description": "Instruction-tuned text generation model"
  },
  "image_model": {
    "name": "Salesforce/blip2-opt-2.7b",
    "max_length": 256,
    "num_beams": 5,
    "description": "Vision-language model for image understanding"
  },
  "audio_model": {
    "name": "whisper-base",
    "language": "en",
    "task": "transcribe",
    "description": "OpenAI Whisper for speech recognition"
  },
  "tts_settings": {
    "provider": "gtts",
    "language": "en",
    "slow": false,
    "description": "Google Text-to-Speech"
  },
  "fusion_settings": {
    "mode": "balanced",
    "enable_memory": true,
    "max_history": 100,
    "context_window": 5
  },
  "ui_settings": {
    "theme": "soft",
    "dark_mode": true,
    "accent_color": "#764ba2",
    "enable_animations": true,
    "mobile_responsive": true
  },
  "openai_settings": {
    "enabled": false,
    "model": "gpt-4o",
    "max_tokens": 700,
    "fallback_to_local": true
  },
  "visualization_settings": {
    "enable_attention_maps": true,
    "enable_color_analysis": true,
    "default_colormap": "jet",
    "save_visualizations": true
  },
  "export_settings": {
    "formats": ["json", "txt", "md", "csv"],
    "include_metadata": true,
    "export_directory": "./exports"
  },
  "cache_directory": "./models_cache"
}